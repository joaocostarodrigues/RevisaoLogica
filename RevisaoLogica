function reverseString(str) {
    var newString = "";
    for (var i = str.length - 1; i >= 0; i--) {
        newString += str[i];
    }
    return newString;
}
reverseString('hello');

function retornaNNumerosPares(n) {
  let numerosPares = [];
  for (let i = 0; numerosPares.length < n; i += 2) {
    numerosPares.push(i);
  }
  return numerosPares;
}

console.log(retornaNNumerosPares(5));

function somaDosPares(x){
   let soma = 0;
   for(let i = 0; i <= x; i+=2){
     soma += i
   }
   return soma;
}
console.log(somaDosPares(9));

